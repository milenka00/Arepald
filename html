console.log("Total de jergas:", getOnlyJergas().length);

// Ejemplo 3: Obtener palabras paisas
console.log("Palabras paisas:", getWordsByRegion('paisa').length);

// Ejemplo 4: Obtener estadísticas completas
console.log("Estadísticas:", getDatabaseStats());

// Ejemplo 5: Palabra aleatoria
console.log("Palabra aleatoria:", getRandomWord());

