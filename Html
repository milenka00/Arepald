// Función utilitaria para obtener palabras por región y dificultad
function getWordsByRegionAndDifficulty(region, difficulty) {
    if (difficulty === 'easy') {
        return wordDatabase.easy[region] || [];
    } else if (difficulty === 'medium') {
        return wordDatabase.medium[region] || [];
    } else if (difficulty === 'hard') {
        return wordDatabase.hard[region] || [];
    }
    return [];
}

// Función para obtener todas las palabras de una región
function getAllWordsByRegion(region) {
    const easy = wordDatabase.easy[region] || [];
    const medium = wordDatabase.medium[region] || [];
    const hard = wordDatabase.hard[region] || [];
    return [...easy, ...medium, ...hard];
}

// Función para obtener todas las palabras de una dificultad
function getAllWordsByDifficulty(difficulty) {
    if (difficulty === 'easy') {
        const paisa = wordDatabase.easy.paisa || [];
        const costeno = wordDatabase.easy.costeno || [];
        const bogotano = wordDatabase.easy.bogotano || [];
        const caleno = wordDatabase.easy.caleno || [];
        return [...paisa, ...costeno, ...bogotano, ...caleno];
    } else if (difficulty === 'medium') {
        const paisa = wordDatabase.medium.paisa || [];
        const costeno = wordDatabase.medium.costeno || [];
        const bogotano = wordDatabase.medium.bogotano || [];
        const caleno = wordDatabase.medium.caleno || [];
        return [...paisa, ...costeno, ...bogotano, ...caleno];
    } else if (difficulty === 'hard') {
        const paisa = wordDatabase.hard.paisa || [];
        const costeno = wordDatabase.hard.costeno || [];
        const bogotano = wordDatabase.hard.bogotano || [];
        const caleno = wordDatabase.hard.caleno || [];
        return [...paisa, ...costeno, ...bogotano, ...caleno];
    }
    return [];
}

// Función para obtener una palabra aleatoria
function getRandomWord(region = null, difficulty = null) {
    let words = [];
    
    if (region && difficulty) {
        words = getWordsByRegionAndDifficulty(region, difficulty);
    } else if (region) {
        words = getAllWordsByRegion(region);
    } else if (difficulty) {
        words = getAllWordsByDifficulty(difficulty);
    } else {
        // Todas las palabras
        words = [
            ...getAllWordsByDifficulty('easy'),
            ...getAllWordsByDifficulty('medium'),
            ...getAllWordsByDifficulty('hard')
        ];
    }
    
    if (words.length === 0) return null;
    
    const randomIndex = Math.floor(Math.random() * words.length);
    return words[randomIndex];
}

// Exportar para uso en módulos
if (typeof module !== 'undefined' && module.exports) {
    module.exports = {
        wordDatabase,
        getWordsByRegionAndDifficulty,
        getAllWordsByRegion,
        getAllWordsByDifficulty,
        getRandomWord
    };
}
