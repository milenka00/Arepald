// ===============================
// FUNCIONES UTILITARIAS
// ===============================

// FunciÃ³n para obtener todas las palabras
function getAllWords() {
    return colombianWordsDatabase;
}

// FunciÃ³n para obtener palabras por categorÃ­a especÃ­fica
function getWordsByCategory(searchCategory) {
    return colombianWordsDatabase.filter(word => 
        word.category.toLowerCase().includes(searchCategory.toLowerCase())
    );
}

// FunciÃ³n para obtener palabras por regiÃ³n
function getWordsByRegion(region) {
    const regionMap = {
        'paisa': ['PAISA'],
        'costeÃ±o': ['COSTEÃ‘A', 'COSTEÃ‘O'],
        'bogotano': ['BOGOTANA', 'BOGOTANO'],
        'caleÃ±o': ['CALEÃ‘A', 'CALEÃ‘O'],
        'tolimense': ['TOLIMENSE'],
        'llanero': ['LLANERA', 'LLANERO'],
        'santandereano': ['SANTANDEREANA'],
        'chocoano': ['CHOCOANA', 'PACIFICA']
    };
    
    const searchTerms = regionMap[region.toLowerCase()] || [region.toUpperCase()];
    
    return colombianWordsDatabase.filter(word => 
        searchTerms.some(term => word.category.includes(term))
    );
}

// FunciÃ³n para obtener solo jergas
function getOnlyJergas() {
    return colombianWordsDatabase.filter(word => 
        word.category.includes('JERGA')
    );
}

// FunciÃ³n para obtener palabras por dificultad (basada en longitud)
function getWordsByDifficulty() {
    return {
        easy: colombianWordsDatabase.filter(word => word.word.length <= 6),
        medium: colombianWordsDatabase.filter(word => word.word.length >= 7 && word.word.length <= 9),
        hard: colombianWordsDatabase.filter(word => word.word.length >= 10)
    };
}

// FunciÃ³n para obtener una palabra aleatoria
function getRandomWord() {
    return colombianWordsDatabase[Math.floor(Math.random() * colombianWordsDatabase.length)];
}

// FunciÃ³n para buscar palabras por hint
function searchByHint(searchTerm) {
    return colombianWordsDatabase.filter(word => 
        word.hint.toLowerCase().includes(searchTerm.toLowerCase())
    );
}

// FunciÃ³n para obtener estadÃ­sticas de la base de datos
function getDatabaseStats() {
    const stats = {
        totalWords: colombianWordsDatabase.length,
        byCategory: {},
        byRegion: {},
        byLength: {
            short: 0,      // â‰¤ 5 letras
            medium: 0,     // 6-8 letras
            long: 0,       // 9-11 letras
            veryLong: 0    // â‰¥ 12 letras
        },
        jergas: 0,
        comidas: 0
    };
    
    colombianWordsDatabase.forEach(word => {
        // Contar por categorÃ­a
        stats.byCategory[word.category] = (stats.byCategory[word.category] || 0) + 1;
        
        // Contar por regiÃ³n
        const region = extractRegion(word.category);
        stats.byRegion[region] = (stats.byRegion[region] || 0) + 1;
        
        // Contar por longitud
        const length = word.word.length;
        if (length <= 5) stats.byLength.short++;
        else if (length <= 8) stats.byLength.medium++;
        else if (length <= 11) stats.byLength.long++;
        else stats.byLength.veryLong++;
        
        // Contar jergas
        if (word.category.includes('JERGA')) stats.jergas++;
        
        // Contar comidas
        if (word.category.includes('COMIDA') || word.category.includes('BEBIDA') || word.category.includes('POSTRE')) {
            stats.comidas++;
        }
    });
    
    return stats;
}

// FunciÃ³n auxiliar para extraer regiÃ³n de categorÃ­a
function extractRegion(category) {
    if (category.includes('PAISA')) return 'PAISA';
    if (category.includes('COSTEÃ‘')) return 'COSTEÃ‘O';
    if (category.includes('BOGOTANA') || category.includes('BOGOTANO')) return 'BOGOTANO';
    if (category.includes('CALEÃ‘')) return 'CALEÃ‘O';
    if (category.includes('TOLIMENSE')) return 'TOLIMENSE';
    if (category.includes('LLANERA') || category.includes('LLANERO')) return 'LLANERO';
    if (category.includes('SANTANDEREANA')) return 'SANTANDEREANO';
    if (category.includes('CHOCOANA') || category.includes('PACIFICA')) return 'CHOCOANO';
    return 'GENERAL';
}

// FunciÃ³n para obtener palabras aleatorias de una cantidad especÃ­fica
function getRandomWords(count) {
    const shuffled = [...colombianWordsDatabase].sort(() => 0.5 - Math.random());
    return shuffled.slice(0, count);
}

// FunciÃ³n para obtener categorÃ­as Ãºnicas
function getUniqueCategories() {
    return [...new Set(colombianWordsDatabase.map(word => word.category))].sort();
}

