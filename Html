// ===============================
// FUNCIONES UTILITARIAS
// ===============================

// FunciÃ³n para obtener todas las palabras mezcladas
function getAllWords() {
    const allWords = [];
    Object.keys(colombianWordsDatabase).forEach(category => {
        allWords.push(...colombianWordsDatabase[category]);
    });
    return allWords;
}

// FunciÃ³n para obtener palabras por categorÃ­a
function getWordsByCategory(categoryName) {
    return colombianWordsDatabase[categoryName] || [];
}

// FunciÃ³n para obtener palabras por regiÃ³n
function getWordsByRegion(region) {
    const allWords = getAllWords();
    return allWords.filter(word => 
        word.category.toLowerCase().includes(region.toLowerCase())
    );
}

// FunciÃ³n para obtener solo jergas
function getOnlyJergas() {
    return colombianWordsDatabase.jergas;
}

// FunciÃ³n para obtener palabras por dificultad (basada en longitud)
function getWordsByDifficulty() {
    const allWords = getAllWords();
    return {
        easy: allWords.filter(word => word.word.length <= 6),
        medium: allWords.filter(word => word.word.length >= 7 && word.word.length <= 9),
        hard: allWords.filter(word => word.word.length >= 10)
    };
}

// FunciÃ³n para obtener una palabra aleatoria
function getRandomWord() {
    const allWords = getAllWords();
    return allWords[Math.floor(Math.random() * allWords.length)];
}

// FunciÃ³n para buscar palabras por hint
function searchByHint(searchTerm) {
    const allWords = getAllWords();
    return allWords.filter(word => 
        word.hint.toLowerCase().includes(searchTerm.toLowerCase())
    );
}

// FunciÃ³n para obtener estadÃ­sticas de la base de datos
function getDatabaseStats() {
    const stats = {
        totalWords: 0,
        categoriesCount: Object.keys(colombianWordsDatabase).length,
        byCategory: {},
        byRegion: {},
        byDifficulty: getWordsByDifficulty()
    };
    
    Object.keys(colombianWordsDatabase).forEach(category => {
        const words = colombianWordsDatabase[category];
        stats.byCategory[category] = words.length;
        stats.totalWords += words.length;
        
        // Contar por regiÃ³n
        words.forEach(word => {
            const region = extractRegion(word.category);
            if (region) {
                stats.byRegion[region] = (stats.byRegion[region] || 0) + 1;
            }
        });
    });
    
    return stats;
}

// FunciÃ³n auxiliar para extraer regiÃ³n de categorÃ­a
function extractRegion(category) {
    const regions = ['PAISA', 'COSTEÃ‘A', 'COSTEÃ‘O', 'BOGOTANA', 'BOGOTANO', 'CALEÃ‘A', 'CALEÃ‘O', 'TOLIMENSE', 'LLANERA', 'LLANERO', 'SANTANDEREANA', 'CHOCOANA', 'PACIFICA'];
    for (let region of regions) {
        if (category.includes(region)) {
            return region;
        }
    }
    return 'GENERAL';
}

